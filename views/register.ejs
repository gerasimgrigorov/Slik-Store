<body>
    <section class="back-container forms mx-0">
        <div class="form">
            <%- include('../views/partials/flash') %>
            <div class="form-content">
                <header>Sign Up</header>
                <form action="/register" method="post" class="validated-form" novalidate> 
                    <div class="field input-field">
                        <input type="email" name="email" placeholder="Email" class="input form-control" required>
                    </div>

                    <div class="field input-field">
                        <input type="text" name="username" placeholder="Username" class="input form-control" required>
                    </div>

                    <div class="field input-field">
                        <input type="password" name="password" placeholder="Create password" class="password form-control" required>
                    </div>
                    
                    <div class="field button-field">
                        <button>Create an account</button>
                    </div>
                </form>
                <div class="form-link">
                    <span>Already have an account? <a href="/login" class="link login-link">Log In</a></span>
                </div>
            </div>
